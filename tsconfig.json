{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
		"target": "es6",
		"lib": ["es2018"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"module": "ES2020",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"outDir": "lib/esm"
	},
	"compileOnSave": false,
  "exclude": [
    "node_modules",
		"tests",
		"lib"
  ]
}
